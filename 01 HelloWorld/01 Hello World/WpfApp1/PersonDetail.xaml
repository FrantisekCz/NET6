<Window x:Class="WpfApp1.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Detail osoby" Width="400">
    <StackPanel>
        <Label FontSize="24" FontWeight="Normal" Margin="30,10,30,0">Jméno</Label>
        <TextBox x:Name="txtFirstName" FontSize="24" FontWeight="Bold" Margin="30,0,30,20"></TextBox>
        <Label FontSize="24" FontWeight="Normal" Margin="30,0,30,0">Příjmení</Label>
        <TextBox x:Name="txtLastName" FontSize="24" FontWeight="Bold" Margin="30,0,30,20"></TextBox>
        <Label FontSize="24" FontWeight="Normal" Margin="30,0,30,0">Datum narození</Label>
        <TextBox x:Name="txtBirthDate" FontSize="24" FontWeight="Bold" Margin="30,0,30,20"></TextBox>
        <Button x:Name="btnSave" Content="Uložit změny" Height="52" FontSize="24" Margin="30,10,30,30" Click="btnSave_Click"/>



    </StackPanel>
</Window>
