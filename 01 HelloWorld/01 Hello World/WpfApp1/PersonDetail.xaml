<Window x:Class="WpfApp1.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Detail osoby" Height="500" Width="400">
    <StackPanel>
        <Label FontSize="24" FontWeight="Normal">Jméno</Label>
        <TextBox x:Name="txtFirstName" FontSize="24" FontWeight="Bold"></TextBox>
        <Label FontSize="24" FontWeight="Normal">Příjmení</Label>
        <TextBox x:Name="txtLastName" FontSize="24" FontWeight="Bold"></TextBox>
        <Label FontSize="24" FontWeight="Normal">Datum narození</Label>
        <TextBox x:Name="txtBirthDate" FontSize="24" FontWeight="Bold"></TextBox>
        


    </StackPanel>
</Window>
